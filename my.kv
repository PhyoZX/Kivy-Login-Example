<CreateAccountWindow>:
    name : "create"

    user_name : user_name
    email : email
    password : password

    FloatLayout :
        cols : 1

        FloatLayout :
            size : root.width, root.height/2

            Label :
                text : "Create An Account"
                size_hint : 0.8, 0.2
                pos_hint : {"x" : 0.1, "top" : 1}
                font_size : (root.width**2 + root.height**2) / 14**4

            Label :
                text : "Name: "
                size_hint : 0.5, 0.12
                pos_hint : {"x" : 0, "top" : 0.8}
                font_size : (root.width**2 + root.height**2) / 14**4

            TextInput :
                id : user_name
                multiline : False

            Label :
                text : "Email: "

            TextInput :
                id : email
                multiline : False

            Label :
                text : "Password: "

            TextInput :
                id : password
                multiline : False

            Button :
                text : "Already have an account? Log In"

            Button :
                text : "Submit"

<LoginWindow> :
    name : "login"
    email : email
    password : password

    FloatLayout :
        Label :
            text : "Email: "
            size_hint : 0.35, 0.15
            pos_hint : {"x" : 0.1, "top" : 0.9}
            font_size : (root.width**2 + root.height**2) / 13**4

        TextInput :
            id : email
            multiline : False
            size_hint : 0.4, 0.15
            pos_hint : {"x" : 0.45, "top" : 0.9}
            font_size : (root.width**2 + root.height**2) / 13**4

        Label :
            text : "Password: "
            size_hint : 0.35, 0.15
            pos_hint : {"x" : 0.1, "top" : 0.7}
            font_size : (root.width**2 + root.height**2) / 13**4

        TextInput :
            id : password
            multiline : False
            password : True
            size_hint : 0.4, 0.15
            pos_hint : {"x" : 0.45, "top" : 0.7}
            font_size : (root.width**2 + root.height**2) / 13**4

        Button :
            text : "Login"
            size_hint: 0.6, 0.2
            pos_hint:{"x":0.2, "y":0.05}
            font_size : (root.width**2 + root.height**2) / 13**4

        Button :
            text : "Don't have an account? Create One"
            size_hint: 0.7, 0.1
            pos_hint:{"x":0.15,"y":0.3}
            font_size : (root.width**2 + root.height**2) / 13**4

<MainWindow> :
    name : name
    email : email
    created : created

    FloatLayout :
        Label :
            id : name
            text : "Account Name: "

        Label :
            id : email
            text : "Email: "

        Label :
            id : created
            text : "Created: "

        Button :
            text : "Log Out"
